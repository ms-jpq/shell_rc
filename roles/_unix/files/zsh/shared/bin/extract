#!/usr/bin/env bash

set -eu
set -o pipefail
shopt -s nullglob globstar


FILE="$*"

case "$FILE" in
  *.tar.bz|*.tar.bz2|*.tbz|*.tbz2|*.tar.gz|*.tgz|*.tar.xz|*.txz)
    export TAPE="$FILE"
    exec tar --extract --auto-compress
    ;;
  *.zip)
    exec unzip -- "$FILE"
    ;;
  *.gz)
    exec gzip --decompress --keep -- "$FILE"
    ;;
  *.rar)
    exec unrar -x -- "$FILE"
    ;;
  *.7z)
    exec 7z -x -- "$FILE"
    ;;
  *)
    printf '%s\n' "Unknown format :: $FILE"
    exit 1
    ;;
esac
