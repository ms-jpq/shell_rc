#!/usr/bin/env python3

from argparse import ArgumentParser, Namespace
from os.path import normcase
from pathlib import Path
from shlex import join, quote
from sys import stderr

_CMD = "GIT_SSH_COMMAND"


def _parse_args() -> Namespace:
    parser = ArgumentParser()
    parser.add_argument("path", nargs="?")
    return parser.parse_args()


def main() -> None:
    args = _parse_args()

    if args.path:
        p = Path(normcase(args.path))
        path = p if p.is_absolute() else Path.home() / ".ssh" / p

        if path.exists():
            cmd = quote(join(("ssh", "-o", "IdentitiesOnly=yes", "-i", str(path))))
            print(f"export {_CMD}={cmd}", end="")
            print(f"✅ {path}", file=stderr)
        else:
            print("true", end="")
            print(f"⛔️ {path}", file=stderr)
    else:
        print(f"unset {_CMD}", end="")
        print("✅ ", file=stderr)


main()
