#!/usr/bin/env python3

from argparse import ArgumentParser, Namespace
from os import execl
from os.path import normcase
from pathlib import Path, PurePath
from shutil import which


def _parse_args() -> Namespace:
    parser = ArgumentParser(add_help=False)
    parser.add_argument("path", type=PurePath)
    parser.add_argument("argv", nargs="...")
    return parser.parse_args()


def main() -> int:
    args = _parse_args()
    path = PurePath(args.path)

    if path == PurePath("-"):
        addn = ()
    else:
        key_path = path if path.is_absolute() else Path.home() / ".ssh" / path
        addn = ("-o", "IdentitiesOnly=yes", "-i", normcase(key_path))

    cmd = "ssh"
    if ssh := which(cmd):
        execl(ssh, normcase(ssh), *addn, *args.argv)
    else:
        raise OSError(cmd)


main()
