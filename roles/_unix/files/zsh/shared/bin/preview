#!/usr/bin/env bash

set -Eeu
set -o pipefail
shopt -s nullglob globstar


TARGET="$1"

export PAGER='tee'

if [[ -d "$TARGET" ]]
then
  ARGS=(
    --color=always
    --group-directories-first
    --all
    --header
    --classify
    --icons
    --oneline
    )
  exec exa "${ARGS[@]}" -- "$TARGET"
else
  ARGS=(
    --color=always
    )
  exec bat "${ARGS[@]}" -- "$TARGET"
fi
