#!/usr/bin/env -S -- bash -Eeuo pipefail -O dotglob -O nullglob -O failglob -O globstar

FILE="$*"

ARGS=()
if [[ -f "$FILE" ]]; then
  :
elif [[ "$FILE" =~ (.+)(:|#|@)([[:digit:]]+)$ ]]; then
  F="${BASH_REMATCH[1]}"
  if [[ -f "$F" ]]; then
    FILE="$F"
    LINE="${BASH_REMATCH[3]}"
    ARGS+=("+execute $LINE")
  fi
fi

if [[ -n "$FILE" ]]; then
  ARGS+=(-- "$FILE")
fi

exec -- nvim "${ARGS[@]}"
