#!/usr/bin/env -S -- bash

set -u
shopt -s failglob globstar

if [[ $# -lt 2 ]]; then
  printf >&2 -- '%s\n' 'ERROR -- missing args:
  <search> <replacement>'
  exit 1
fi

if [[ -t 0 ]]; then
  printf >&2 -- '%s\n' 'ERROR -- nil stdin'
  exit 1
fi

SEARCH="$1"
REPLACE="$2"
shift
shift

ARGS=(
  --replace
  "$REPLACE"
  "$@"
  --color=never
  --passthru
  --
  "$SEARCH"
)

rg "${ARGS[@]}" </dev/stdin

if [[ $? -eq 2 ]]; then
  exit 1
else
  exit 0
fi
