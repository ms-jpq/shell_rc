#!/usr/bin/env -S -- bash -Eeuo pipefail -O dotglob -O failglob -O globstar

TARGET="$1"

export -- PAGER='tee'

if [[ -d "$TARGET" ]]; then
  if command -v -- exa >/dev/null; then
    ARGS=(
      exa
      --all
      --group-directories-first
      --classify
      --header
      --icons
      --oneline
      --color=always
    )
  else
    ARGS=(
      ls
      --almost-all
      --group-directories-first
      --classify
      --human-readable
      --si
      --color=always
    )
  fi
else
  ARGS=(
    bat
    --color=always
  )
fi

exec -- "${ARGS[@]}" -- "$TARGET"
