#!/usr/bin/env bash

set -eu
set -o pipefail


COLS=$(tput cols)

FONTS=("$(figlet -I 2)"/**.flf)
FONT="${FONTS[$(($RANDOM % ${#FONTS[@]}))]}"


ARGS=(
  -c
  -w
  "$COLS"
  -f
  "$FONT"
  )


if [[ -t 0 ]]
then
  TEXT="$*"
else
  TEXT="$(< /dev/stdin)"
fi


TEXT="${TEXT:-'BIGLY'}"
exec figlet "${ARGS[@]}" <<< "$TEXT"
